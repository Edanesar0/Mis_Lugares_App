<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sainet.mislugaresapp.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fodoinicial"
        android:scaleType="center"/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/btnRegitraEmail"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnRegitraEmail"
        android:layout_marginTop="247dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/btnRegitraEmail"
        android:layout_width="213dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/registro_con_e_mail"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRegitraEmail"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignRight="@+id/btnRegitraEmail"
        android:layout_alignStart="@+id/login_button"
        android:layout_below="@+id/btnRegitraEmail"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/iniciar_sesi_n"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />
</RelativeLayout>


